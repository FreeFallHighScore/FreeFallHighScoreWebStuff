  </div>
  <div class="bottom"></div>
</div>
<div class="tweets">
  <div class="top">
    <h3>Tweets</h3>
  </div>
  <div class="content tweet">
    <div class="twitter-follow">
      <a href="http://twitter.com/freefallhiscore" class="twitter-follow-button" data-show-count="false" data-link-color="#ffffff">Follow @freefallhiscore</a>
      <script src="http://platform.twitter.com/widgets.js" type="text/javascript"></script>
    </div>

    <%= cache "Tweet" do %>
      <%
        begin
          tweets = Twitter::Search.new.q("freefallhighscore").fetch
          tweets.first(4).each do |tweet|
        %>
            <%= render '/layouts/tweet', :tweet => tweet %>
        <% end %>
      <% rescue %>
      <% end %>
    <% end %>
  </div>
  <div class="bottom"></div>
</div>
