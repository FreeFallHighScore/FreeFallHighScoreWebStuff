<html>
  <head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <title>FreeFall High Score<%= " - #{@page_title}" if @page_title %></title>
    <%= stylesheet_link_tag :all %>
    <%= javascript_include_tag :defaults %>
    <%= csrf_meta_tag %>

    <meta name="description" content="">
    <meta name="author" content="FreeFallHighScore, freefallhighscore@googlegroups.com">
    <meta name="viewport" content="width=device-width,initial-scale=1">
  </head>
  <body class="<%= controller.controller_name %> <%= controller.action_name %> <%= @page if @page %>">
    <header>
      <%= render "/layouts/header" %>
    </header>

    <div id="main" role="main">
      <div id="content">
        <%= yield %>
      </div>
    </div>

    <footer>
      <% if current_user and current_user.admin? %>
        <div style="position: absolute; right: 0; top: 50px; background-color: white;">
          <%= link_to "Moderate", moderate_path %>
        </div>
      <% end %>
      <%= render '/layouts/footer' %>
    </footer>

    <%= render '/layouts/javascript' %>

    <!--[if lt IE 7 ]>
    <script src="//ajax.googleapis.com/ajax/libs/chrome-frame/1.0.2/CFInstall.min.js"></script>
    <script>window.attachEvent("onload",function(){CFInstall.check({mode:"overlay"})})</script>
    <![endif]-->
    <div style="clear: both"></div>
  </body>
</html>
