<!DOCTYPE html>
<html>
  <head>
    <meta name="google-site-verification" content="s5Ky2Ssdh1j3mzdOWmsvSVDoBLV_HCwk7n7gF_ebwPs" />
    <title>FreeFall High Score</title>
    <%= stylesheet_link_tag :all %>
    <%= javascript_include_tag :defaults %>
    <%= csrf_meta_tag %>
  </head>
  <body class="<%= controller.controller_name %> <%= controller.action_name %>">
    <%= render "/layouts/header" %>

    <div id="content">
      <% if current_user %>
        <div class="account-box">
          <% if current_user.admin? %>
            ADMIN:
          <% end %>
          <%= current_user.name %><br/>
          <%= link_to "Sign Out", :signout %><br/>
          <%= link_to "Moderate", :moderate if current_user.admin? and controller.action_name != 'moderate' %>
        </div>
      <% end %>

      <%= yield %>
      <div class="clear"></div>
    </div>

    <div id="cloudsBottom" class="clear"></div>
    <%= render '/layouts/javascript' %>
  </body>
</html>
